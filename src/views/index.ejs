<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title><%= config.title %></title>
        <meta name="author" content="Pawndev">
        <meta name="description" content="Let's buzz-in!">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <link href="https://fonts.googleapis.com/css?family=Poppins:500,700|Roboto:400,500,700,900" rel="stylesheet">
        <link href="/style.css" rel="stylesheet">
    </head>
    <body class="js-body">
        <header>
            <img class="logo" alt="Buzzer logo" src="/buzzer-logo.svg" />
        </header>
        <div class="container">
            <form action="" class="view js-join">
                <img class="main-image" src="/lets-play.png" alt="let's play">
                <h2>Let's play!</h2>
                <label>
                    <input type="text" name="name" placeholder="Your name" required="required" />
                </label>
                <label>
                    <input type="number" name="team" placeholder="Your team number" required="required" />
                </label>
                <button type="submit">Join!</button>
            </form>
            <div class="view js-joined hidden">
                <p class="js-joined-info"></p>
                <p class="js-team-info"></p>
                <button class="js-buzzer buzzer">Buzz!!!</button> <!-- TODO: see why this: button.js-buzzer.buzzer()='Buzz!!!' -->
                <table class="rwd-table">
                    <tr>
                        <th>Team Name</th>
                        <th>Point</th>
                    </tr>
                    <% data.teams.forEach(function(team){ %>
                    <tr>
                        <td data-th="Team Name"><%= team.name %></td>
                        <td data-th="Point"><%= team.point %></td>
                    </tr>
                    <% })%>
                </table>
            </div>
            <button class="js-edit secondary">Change Teams</button>
        </div>
        <script src="/socket.io/socket.io.js"></script>
        <script src="/join.js"></script>
    </body>
</html>
