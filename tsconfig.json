{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": "src",
    "declaration": false,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "lib": ["esnext", "dom"],
    "module": "commonjs",
    "outDir": "build",
    "preserveSymlinks": true,
    "rootDir": "src",
    "sourceMap": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "target": "es6",
    "types": ["node"],
    "typeRoots": ["./typings"]
  },
 "include": [
   "src/**/*"
 ]
}
